<div>
	<%= form_for @user do |user_f| %>
		<section class="clearfix vertical-margin">
			<%= render 'shared/error_messages', object: user_f.object %>

			<div class="row">
				<div class="span6">
					<div class="pull-right">
						<%= user_f.label :username %>
						<% if @user.new_record? %>
							<%= user_f.text_field :username %>
						<% else %>
							<%= user_f.text_field :username, readonly: true %>
						<% end %>
					</div>
					<div class="clearfix"></div>
					<div class="pull-right">
						<%= user_f.label :password %>
						<%= user_f.password_field :password %>
					</div>
					<div class="clearfix"></div>
					<div class="pull-right">
						<%= user_f.label :email %>
						<%= user_f.text_field :email %>
					</div>
				</div>
				<div class="span6">
					<%= user_f.label :first_name %>
					<%= user_f.text_field :first_name %>
		
					<%= user_f.label :last_name %>
					<%= user_f.text_field :last_name %>

					<%= user_f.label :phone %>
					<%= user_f.text_field :phone %>
				</div>
			</div>
			<div class="row">
				<div class="span6">
					<div class="clearfix"></div>
					<div class="pull-right top-margin">
						<%= user_f.label :is_admin, class: "floating-left-label" %>
						<%= user_f.check_box :is_admin %>
					</div>
				</div>
			</div>
		</section>
		<div class="span12 centered">
			<% if @user.new_record? %>
				<%= user_f.submit "Registrar", class: "btn btn-large btn-warning" %>
			<% else %>
				<%= user_f.submit "Actualizar", class: "btn btn-large btn-warning" %>
			<% end %>
		</div>
	<% end %>
</div>
